extends layout

block content
  div(class='content')
    form(action="/", method="post", enctype='multipart/form-data', class='form')
      input(type="text", name='product_id', placeholder='Ma san pham')
      input(type="text", name='name', placeholder='Ten san pham')
      input(type="text", name='amount', placeholder='So luong')
      input(type="file", name="image")
      input(type="submit", value="Them")
    table(border='1')
      thead  
        th Ma san pham
        th Ten sp 
        th So luong
        th Hinh anh 
        th Chon 
      tbody 
        each product, i in products
          tr 
            td= product.product_id
            td= product.name
            td= product.amount
            td
              img(src=`${product.image}`, alt="Image", width="50px")
            td
              a(href="/delete?id="+product.product_id) Xoa
              a(href="/update?id=" + product.product_id) Sua 
